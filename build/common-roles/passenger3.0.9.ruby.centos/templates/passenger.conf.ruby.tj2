LoadModule passenger_module /usr/local/lib/ruby/gems/{{ ruby_library_version }}/gems/passenger-{{ passenger_version }}/ext/apache2/mod_passenger.so
<IfModule mod_passenger.c>
  PassengerRoot /usr/local/lib/ruby/gems/{{ ruby_library_version }}/gems/passenger-{{ passenger_version }}
  PassengerRuby /usr/local/bin/ruby
  PassengerMaxPoolSize 6
  PassengerMaxInstancesPerApp 0
  PassengerPoolIdleTime 300
</IfModule>
